#include <ESP8266SSDP.h>

#include <ESP8266WiFi.h>          //ESP8266 Core WiFi Library
#include <PubSubClient.h>         //MQTT
 
////**********START CUSTOM PARAMS******************//
 
////Define parameters for the http firmware update // which we aren't using 
const char* host = "Garage1ESP";
const char* ssid = "wifi_ssid";
const char* password = "wifi_pwd";
 
//Define the pins
#define RELAY_PIN1 5
#define RELAY_PIN2 4
#define DOOR_PIN1 15
#define DOOR_PIN2 2
 
//Define your own MQTT 
#define mqtt_server "MQTT_IP"  //This is what you set up in HA. 
#define door_topic_1 "sensor/garage/state1" //you can change this name, but make sure you "replace all"
#define button_topic_1 "sensor/garage/action1" //you can change this name, but make sure you "replace all"
#define door_topic_2 "sensor/garage/state2" //you can change this name, but make sure you "replace all"
#define button_topic_2 "sensor/garage/action2" //you can change this name, but make sure you "replace all"
const char* mqtt_user = "MQTT_UID"; //This is what you set up in HA. 
const char* mqtt_pass = "MQTT_PWD"; //This is what you set up in HA. 
 
//************END CUSTOM PARAMS********************//
//This can be used to output the date the code was compiled
const char compile_date[] = __DATE__ " " __TIME__;
 
WiFiClient espCgarage1;
 
//Initialize MQTT
PubSubClient client(espCgarage1);
 
//Setup Variables
String switch1;
String switch2;
String strTopic_1;
String strPayload_1;
String strTopic_2;
String strPayload_2;
char* door_state_1 = "UNDEFINED";
char* door_state_2 = "UNDEFINED";
char* last_state_1 = "";
char* last_state_2 = "";
 
void setup() {
  //Set Relay(output) and Door(input) pins
  pinMode(RELAY_PIN1, OUTPUT);
  digitalWrite(RELAY_PIN1, HIGH);
  pinMode(DOOR_PIN1, INPUT);
  pinMode(RELAY_PIN2, OUTPUT);
  digitalWrite(RELAY_PIN2, HIGH);
  pinMode(DOOR_PIN2, INPUT);
 
  Serial.begin(115200);

  setup_wifi();


  client.setServer(mqtt_server, 1883); //1883 is the port number you have forwared for mqtt messages. You will need to change this if you've used a different port 
  client.setCallback(callback); //callback is the function that gets called for a topic sub
}


void loop() {
  //If MQTT client can't connect to broker, then reconnect
  if (!client.connected()) {
    reconnect();
  }
  checkDoorState_1();
  checkDoorState_2();
  client.loop(); //the mqtt function that processes MQTT messages
  
}
 
void callback(char* topic, byte* payload, unsigned int length) {
  //if the 'garage/button' topic has a payload "OPEN", then 'click' the relay
  payload[length] = '\0';
  strTopic_1 = String((char*)topic);
  if (strTopic_1 == button_topic_1)
  {
    switch1 = String((char*)payload);
    Serial.println(switch1);
    if (switch1 == "OPEN")
    {
      //'click' the relay
      Serial.println("ON");
      digitalWrite(RELAY_PIN1, LOW);
      delay(600);
      digitalWrite(RELAY_PIN1, HIGH);
    }
  }
  strTopic_2 = String((char*)topic);
  if (strTopic_2 == button_topic_2)
  {
    switch2 = String((char*)payload);
    Serial.println(switch2);
    if (switch2 == "OPEN")
    {
      //'click' the relay
      Serial.println("ON");
      digitalWrite(RELAY_PIN2, LOW);
      delay(600);
      digitalWrite(RELAY_PIN2, HIGH);
    }
  }
}



void setup_wifi() {

  delay(10);
  Serial.println();
  Serial.print("Connecting to ");
  Serial.println(ssid);

  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("");
  Serial.println("WiFi connected");
  Serial.println("IP address: ");
  Serial.println(WiFi.localIP());
}



void checkDoorState_1() {
  //Checks if the door state has changed, and MQTT pub the change
  last_state_1 = door_state_1; //get previous state of door
  if (digitalRead(DOOR_PIN1) == 0) // get new state of door
    door_state_1 = "closed";
  else if (digitalRead(DOOR_PIN1) == 1)
    door_state_1 = "open"; 
  if (last_state_1 != door_state_1) { // if the state has changed then publish the change
    client.publish(door_topic_1, door_state_1);
    Serial.println(door_state_1);
  }
}

void checkDoorState_2() {
  //Checks if the door state has changed, and MQTT pub the change
  last_state_2 = door_state_2; //get previous state of door
  if (digitalRead(DOOR_PIN2) == 1) // get new state of door
    door_state_2 = "closed";
  else if (digitalRead(DOOR_PIN2) == 0)
    door_state_2 = "open";  
  if (last_state_2 != door_state_2) { // if the state has changed then publish the change
    client.publish(door_topic_2, door_state_2);
    Serial.println(door_state_2);
  }  
}
 
void reconnect() {
  //Reconnect to Wifi and to MQTT. If Wifi is already connected, then autoconnect doesn't do anything.
  Serial.print("Attempting MQTT connection...");
  if (client.connect(host, mqtt_user, mqtt_pass)) {
    Serial.println("connected");
    client.subscribe("sensor/garage/#");
  } else {
    Serial.print("failed, rc=");
    Serial.print(client.state());
    Serial.println(" try again in 5 seconds");
    // Wait 5 seconds before retrying
    delay(5000);
  }
}
